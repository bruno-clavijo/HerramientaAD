@model DependenciaMVC5demo.Models.PerfilesModel

@{
    ViewBag.Title = "Perfiles";
}

<div class="combos">
    <table>
        <tr>
            <td style="color:#fff;"><h4>Perfiles</h4></td>
        </tr>
    </table>
</div>
<br />
<br />
<br />

@using (Html.BeginForm("Perfiles", "Perfiles", new { PerfilID = 0, Tipo = "Inserta" }))
{
    <table id="Tabla" align="center" style="width:20%; border-collapse: collapse;" cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td>
                <button type="submit" class="botonazul">Nuevo</button>
            </td>
        </tr>
    </table>
    <br />
    <table id="Tabla1" align="center" style="width:100%; border-collapse: collapse;" cellpadding="0" cellspacing="0">
        <thead>
            <tr class="GridViewScrollHeader">
                <th>Perfil</th>
                <th>Analisis</th>
                <th>Dependencias</th>
                <th>Detalle</th>
                <th>Graficas</th>
                <th>Usuarios</th>
                <th>Perfiles</th>
                <th>Aplicaciones</th>
                <th>Estatus</th>
                <th>Eliminar</th>
                <th>Modificar</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (System.Xml.XmlNode xmlNode in Model.PerfilesXML.DocumentElement.SelectSingleNode("Perfiles").SelectNodes("row"))
                {
                    <tr class="GridViewScrollItem">
                        <td>@xmlNode.Attributes["Nombre"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["Analisis"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["Dependencias"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["Detalle"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["Graficas"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["ABMUsuarios"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["ABMPerfiles"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["ABMAplicaciones"].Value.ToString()</td>
                        <td>@xmlNode.Attributes["Estatus"].Value.ToString()</td>
                        <td class="CampoMasCorto">@Html.ActionLink("(-)", "Perfiles", "Perfiles", new { PerfilID = xmlNode.Attributes["PerfilID"].Value.ToString(), Tipo = "Elimina" }, new { @class = "btn-descarga" })</td>
                        <td class="CampoMasCorto">@Html.ActionLink("Editar", "Perfiles", "Perfiles", new { PerfilID = xmlNode.Attributes["PerfilID"].Value.ToString(), Tipo = "Actualiza" }, new { @class = "btn-descarga" })</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}